<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/searchview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/orange2"
        android:orientation="horizontal">
        <!-- Đặt nội dung của LinearLayout searchview ở đây -->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/orange1"
            android:src="@drawable/search"></ImageButton> <!-- Thay đổi your_image thành tên tài nguyên ảnh của bạn -->
        <!--            android:onClick="performDifferentFunction" &lt;!&ndash; Đặt sự kiện onClick cho ImageButton &ndash;&gt;-->
        <!--            android:contentDescription="Your Image Description" -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical">
            <!-- Nội dung cho LinearLayout thứ 1 ở trong searchview -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">
            <!-- Nội dung cho LinearLayout thứ 2 ở trong searchview -->
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:background="@color/orange4"
        >


    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.5"
        android:background="@color/orange4"
        >

        <!-- ImageButton 1 -->
        <ImageButton
            android:id="@+id/settingbutton1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:contentDescription="Image 1 Description"
            android:background="@color/orange1"
            />

        <!-- ImageButton 2 -->
        <ImageButton
            android:id="@+id/settingbutton2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/library"
            android:contentDescription="Image 2 Description"
            android:layout_marginStart="5dp"
            android:background="@color/orange1"

            />

        <!-- ImageButton 3 -->
        <ImageButton
            android:id="@+id/settingbutton3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/settings"
            android:contentDescription="Image 3 Description"
            android:layout_marginStart="5dp"
            android:background="@color/orange4"
            />
    </LinearLayout>
</LinearLayout>